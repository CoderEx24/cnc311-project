<AffairsCourseEntry>:
    orientation: 'horizontal'

    Label:
        text: root.course_name

    Button:
        text: 'Modify'

    Button:
        text: 'Delete'

<AffairsDashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            orientation: 'horizontal'

            size_hint_y: 0.1

            Label:
                size_hint_x: 0.1
                text: 'ID: '
            
            TextInput:
                id: course_id
                multiline: False
            
            Label:
                size_hint_x: 0.3
                text: 'Credits: '
            
            TextInput:
                id: credits
                multiline: False

            Label:
                size_hint_x: 0.3
                text: 'Semster: '
            
            TextInput:
                id: semster
                multiline: False


        BoxLayout:
            orientation: 'horizontal'

            size_hint_y: 0.1
            
            Label:
                size_hint_x: 0.35
                text: 'Course Name: '

            TextInput:
                id: course_name
                multiline: False

            Button:
                size_hint_x: 0.12
                text: 'Add'


        RecycleView:
            viewclass: 'AffairsCourseEntry'
            data: [{} for _ in range(10)]

            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
