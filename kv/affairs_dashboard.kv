<AffairsCourseEntry>:
    orientation: 'horizontal'

    Label:
        text: root.course_name

    Button:
        text: 'Modify'

    Button:
        text: 'Delete'

<AffairsDashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'ID: '
            
            TextInput:
                id: course_id
                multiline: False
            
            Label:
                text: 'Credits: '
            
            TextInput:
                id: credits
                multiline: False

            Label:
                text: 'Semster: '
            
            TextInput:
                id: semster
                multiline: False
        
        BoxLayout:
            orientation: 'horizontal'
            
            Label: 
                text: 'Course Name: '

            TextInput:
                id: course_name
                multiline: False

        RecycleView:
            viewclass: 'AffairsCourseEntry'
            data: [{} for _ in range(10)]

            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
