<RegisteredCourseEntry>:
    orientation: 'horizontal'
    Label:
        text: root.course_name
    Button:
        size_hint_x: 0.2
        text: 'Drop'
        
<StudentDashboardScreen>:
    on_enter: self.populate_data()
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'

            Button:
                text: 'Add Course'
                on_press: root.manager.transition.direction = 'left'; root.manager.current = 'course_register';

            Button:
                text: 'View Academic Data'

            Button:
                text: 'View Schedule'

        TextInput:
            size_hint_y: 0.1
            id: search


        RecycleView:
            viewclass: 'RegisteredCourseEntry'
            orientation: 'vertical'
            id: courses_list

            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
