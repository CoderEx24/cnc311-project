<LoginScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            
            size_hint: (0.8, 0.3)
            
            BoxLayout:
                oritentation: 'horizontal'
                
                Label:  
                    size_hint_x: 0.35
                    text: 'Username'
            
                TextInput:
                    multiline: False
                    id: username

            BoxLayout:
                oritentation: 'horizontal'

                Label:
                    size_hint_x: 0.35
                    text: 'Password'

                TextInput:
                    on_text_validate: root.attempt_login()
                    multiline: False
                    password: True
                    id: password

            BoxLayout:
                oritentation: 'horizontal'

                Button:
                    on_press: root.attempt_login()
                    text: 'Login'

