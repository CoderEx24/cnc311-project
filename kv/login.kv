<LoginScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            
            size_hint: (0.8, 0.3)
            
            Label:
                id: error_widget
                canvas.before:
                    Color:
                        rgba: 0.9, 0.01, 0.01, 0.9
                    Rectangle:
                        size: self.size
                        pos: self.pos
                    
                text: f''
                opacity: 0
                size_hint_y: 0
            
            BoxLayout:
                oritentation: 'horizontal'
                
                Label:  
                    size_hint_x: 0.35
                    text: 'Username'
            
                TextInput:
                    multiline: False
                    id: username

            BoxLayout:
                oritentation: 'horizontal'

                Label:
                    size_hint_x: 0.35
                    text: 'Password'

                TextInput:
                    on_text_validate: root.login()
                    multiline: False
                    password: True
                    id: password

            BoxLayout:
                oritentation: 'horizontal'

                Button:
                    on_press: root.login()
                    text: 'Login'

